<main id="main" data-aos="fade-in">
    <section class="login">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="login_title">
                        <h3>Login</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="login_bottom">
                    <div>
                        {{#if errors}}
                            <p class="alert alert-danger" role="alert">{{errors}}</p>
                        {{/if}}
                    </div>
                    <div class="login_form">
                        <form action="/users/login" method="POST">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value={{values.email}}>
                            </div>
                                <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" value={{values.password}}>
                            </div>
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </form>
                    </div>
                    <div class="login_link">
                        <span>If you don't have an account </span><a href="/users/register" style="color: blue; font-style: italic;">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </section>    
</main>
