  <link rel="stylesheet" href="/assets/css/reigister.css">
  <main id="main">
      <div class="container">
 <form id="form" class="form" action="" method="POST" autocomplete="off" enctype="application/x-www-form-urlencoded">
            <h2 style="color:blue">INSERT COURSES</h2>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" placeholder="Name" id="Name" name="Name"/>
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input type="text" placeholder="Price" id="Price" name="Price" />
        </div>
        <div class="form-group">
            <label for="Image">Image</label>
            <input type="text" placeholder="Image" id="Image" name="Image" />
        </div>
        <div class="form-group">
            <label for="studentNumber">StudentNumber</label>
            <input type="text" placeholder="StudentNumber" id="StudentNumber" name="StudentNumber" >
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" placeholder="Description" id="Description" name="Description" />
        </div>
        <div class="form-group">
            <label for="StartDate">StartDate</label>
            <input type="date" placeholder="StartDate" id="StartDate" name="StartDate" />
        </div>
        <div class="form-group">
            <label for="StarNumber">StarNumber</label>
            <input type="text" placeholder="StarNumber" id="StarNumber" name="StarNumber" required/>
        </div>  
        <div class = "form-group">
            <label for="Level">Level</label>
        <select class="custom-select" id="inputGroupSelect01" name="Level">
            <option value="">Choose...</option>
            <option value="Beginner">Beginner</option>
            <option value="Medium">Medium</option>
            <option value="Advanced">Advanced</option>
        </select>   
        </div>
        <div class="form-group">
            <label for="ReviewNumber">ReviewNumber</label>
            <input type="text" placeholder="ReviewNumber" id="ReviewNumber" name="ReviewNumber" required/>
        </div>
        <div class = "form-group">
            <label for="CategoryID">CategoryID</label>
        <select class="custom-select" id="inputGroupSelect01" name="CategoryId">
            <option value="">Choose...</option>
            {{#each category}}
            <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select>   
        </div>
        <div class = "form-group">
            <label for="TopicID">TopicID</label>
        <select class="custom-select" id="inputGroupSelect01" name="TopicId">
            <option value="">Choose...</option>
            {{#each topic}}
            <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select>   
        </div>
        <button type="submit" class="btn btn-info">Insert</button>
        {{#if message}}
			<div class="col-md-12">
					<span class="alert {{type}}">{{message}}</span>
			</div>
		{{/if}}
    </form>
</div>
  </main>
