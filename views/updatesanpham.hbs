  <link rel="stylesheet" href="/assets/css/reigister.css">
  <div class = "container">
      <form id="form" class="form" action="" method="POST" autocomplete="off" enctype="application/x-www-form-urlencoded">
         <h2 style="color:blue">UPDATE COURSES</h2>
         <input type="hidden" placeholder="ID" id="ID" name="ID" value="{{sp._id}}"/>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" placeholder="Name" id="Name" name="Name"value="{{sp.name}}">
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input type="text" placeholder="Price" id="Price" name="Price"value="{{sp.price}}">
        </div>
        <div class="form-group">
            <label for="studentNumber">StudentNumber</label>
            <input type="text" placeholder="StudentNumber" id="StudentNumber" name="StudentNumber"value="{{sp.studentNumber}}" >
        </div>
        <div class="form-group">
            <label for="Image">Image</label>
            <input type="text" placeholder="Image" id="Image" name="Image"value="{{sp.image}}" >
        </div>
        <div class="form-group">
            <label for="Discription">Discription</label>
            <input type="text" placeholder="Description" id="Description" name= "Description"value="{{sp.description}}">
        </div>
        <div class="form-group">
            <label for="StartDate">StartDate</label>
            <input type="date" placeholder="StartDate" id="StartDate" name="StartDate"value="{{spSD}}">
        </div>
        <div class="form-group">
            <label for="StarNumber">StarNumber</label>
            <input type="text" placeholder="StarNumber" id="StarNumber" name="StarNumber"value="{{sp.starNumber}}">
        </div>
            <div class = "form-group">
            <label for="Level">Level</label>
        <select class="custom-select" id="inputGroupSelect01" name="Level" value="{{sp.level}}">
            <option value="Beginner">Beginner</option>
            <option value="Medium">Medium</option>
            <option value="Advanced">Advanced</option>
        </select>   
        </div> 
        <div class="form-group">
            <label for="ReviewNumber">ReviewNumber</label>
            <input type="text" placeholder="ReviewNumber" id="ReviewNumber" name="ReviewNumber"value= "{{sp.reviewNumber}}">
        </div>
            <div class="form-group">
                <label for="CategoryID">CategoryID</label>
                <select class="custom-select" id="inputGroupSelect01" name="CategoryId" value="{{sp.category}}">
                    {{#each category}}
                    <option value="{{name}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
       <div class = "form-group">
            <label for="Topic">Topic</label>
        <select class="custom-select" id="inputGroupSelect01" name="TopicId" value={{sp.topicId}}>
            {{#each topic}}
            <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select> 
        </div>
        <button type="submit" class="btn btn-info">Update</button>
        {{#if message}}
			<div class="col-md-12">
					<span class="alert {{type}}">{{message}}</span>
			</div>
		{{/if}}
    </form>
  </div>